mixin logo
  .container
    .col12: h1(data-sr='enter top move 100px'): a(href="index.html"): img(src="site/img/appta_security.png", alt="#{title}", title="#{title}")

mixin contact
  section#contactSection
    .container
      .col5.col-t10.push-t1.col-m10.push-m1
        div.tac
          img(src="site/img/appta_imago_dark.png", alt="#{title}")
        h3 Ponte en contacto con nosotros.
        p Recibe asesoramiento personalido y resuelve tus dudas.
      .col6.push1.col-t10.push-t1.col-m10.push-m1: +formSimple('jessica.garcia@apptasecurity.com', 'jessica.garcia@apptasecurity.com', 'Mensaje de ApptaSecurity.com')

mixin footer
  footer
    .container
      .col12.tac
        a(href="index.html"): img(src="site/img/appta_imago.png", alt="#{title}")
    .container
      .col12: nav: +menu('index', menu, 'horizontal')
    .container.socials
      .col1.push5: a(href="https://www.facebook.com/APPTA-SECURITY-287033244659489", target="_blank", data-sr="enter left"): i.fa.fa-facebook
      .col1: a(href="https://twitter.com/seguridadenmx", target="_blank", data-sr="enter right"): i.fa.fa-twitter
